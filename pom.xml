    <build>
        <finalName>biaojiang</finalName>
        <resources>
            <resource>
                <!-- 被替换文件路径 -->
                <directory>src/main/resources</directory>
                <!-- 是否替换 -->
                <filtering>true</filtering>
            </resource>
        </resources>
        <filters>
            <!-- 默认替换文件路径 -->
            <filter>src/main/resources/env/develope.properties</filter>
        </filters>
        <plugins>
            <!-- mybatis自动生成器 -->
